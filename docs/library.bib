keywords = {Complex life cycle,Disease ecology,Ecosystem energetics,Ecosystem process,Freshwater food web,Macroparasite,Pathogen,Secondary production,Wetland},
language = {en},
month = {nov},
number = {3},
pages = {509--517},
pmid = {23488451},
title = {{Biomass and productivity of trematode parasites in pond ecosystems}},
url = {http://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/1365-2656.12030 http://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2656.12030 http://besjournals.onlinelibrary.wiley.com/doi/full/10.1111/1365-2656.12030},
