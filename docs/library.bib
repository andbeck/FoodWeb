isbn = {0021-8790},
issn = {00218790},
journal = {Journal of Animal Ecology},
keywords = {Cannibalism,Coexistence,Feeding cycles,Food webs,Mutual predation,Omnivory,Polyphagy,Size-spectra,Trophic status},
