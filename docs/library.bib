pages = {627--634},
pmid = {21296081},
title = {{The reduction of food web robustness by parasitism: Fact and artefact}},
url = {http://www.sciencedirect.com/science/article/pii/S0020751911000294 http://ac.els.cdn.com/S0020751911000294/1-s2.0-S0020751911000294-main.pdf?{\_}tid=64a1276e-493f-40d3-9283-4d6798869c65{\&}acdnat=1543574803{\_}6cbcfd9496e8a483110092434941b611 http://www.sciencedir},
