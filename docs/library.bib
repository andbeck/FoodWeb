number = {8},
pages = {e12092},
pmid = {20711506},
title = {{The probabilistic niche model reveals the niche structure and role of body size in a complex food web}},
url = {https://journals.plos.org/plosone/article?id=10.1371/journal.pone.0012092 https://journals.plos.org/plosone/article/file?id=10.1371/journal.pone.0012092{\&}type=printable},
