pmid = {22339475},
title = {{Patterns of interactions of a large fish-parasite network in a tropical floodplain}},
url = {https://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/j.1365-2656.2012.01967.x https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2656.2012.01967.x http://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2656.2012.01967.x h},
